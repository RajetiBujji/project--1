#include <stdio.h>
#include <string.h>
#include <math.h>

// Function to convert binary to decimal
int binaryToDecimal(char *num) {
    int len = strlen(num);
    int decimal = 0;
    for (int i = 0; i < len; i++) {
        if (num[i] == '1') {
            decimal += pow(2, len - 1 - i);
        }
    }
    return decimal;
}

// Function to convert octal to decimal
int octalToDecimal(char *num) {
    int len = strlen(num);
    int decimal = 0;
    for (int i = 0; i < len; i++) {
        decimal += (num[i] - '0') * pow(8, len - 1 - i);
    }
    return decimal;
}

// Function to convert hexadecimal to decimal
int hexToDecimal(char *num) {
    int len = strlen(num);
    int decimal = 0;
    for (int i = 0; i < len; i++) {
        int digit;
        if (num[i] >= '0' && num[i] <= '9') {
            digit = num[i] - '0';
        } else if (num[i] >= 'a' && num[i] <= 'f') {
            digit = num[i] - 'a' + 10;
        } else if (num[i] >= 'A' && num[i] <= 'F') {
            digit = num[i] - 'A' + 10;
        }
        decimal += digit * pow(16, len - 1 - i);
    }
    return decimal;
}

int main() {
    char binary[] = "11101";
    char octal[] = "1532";
    char hex[] = "35Z";

    printf("Binary %s in decimal: %d\n", binary, binaryToDecimal(binary));
    printf("Octal %s in decimal: %d\n", octal, octalToDecimal(octal));
    printf("Hex %s in decimal: %d\n", hex, hexToDecimal(hex));

    return 0;
}