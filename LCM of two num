#include <stdio.h>

int main() {
    int n1, n2, a, b;

    
    printf("Enter the first number: ");
    scanf("%d", &n1);
    printf("Enter the second number: ");
    scanf("%d", &n2);

    
    a = n1;
    b = n2;

    
    while (n1 != n2) {
        if (n1 < n2) {
            n1 += a;
        } else {
            n2 += b;
        }
    }

    
    printf("The LCM of %d and %d is %d\n", a, b, n1);

    return 0;
}